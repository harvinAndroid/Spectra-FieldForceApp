<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/spectraText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/spectra"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10ssp"
        android:textColor="@color/colorWhite"
        android:textSize="72sp" />

    <TextView
        android:id="@+id/make_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spectraText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/makelifebetter"
        android:textColor="@color/colorGray"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/errortxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/make_life"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/colorRed"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/errortxt"
        android:layout_margin="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_corner">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/colorBlack"
            android:hint="@string/user_name"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/user_pass"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/colorBlack"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray"
            android:textSize="20sp"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="190dp"
            android:layout_height="@dimen/_40ssp"
            android:layout_below="@id/user_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_button"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/register_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text=""
            android:textColor="@color/colorLink"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorBlue" />

    </RelativeLayout>

</RelativeLayout>