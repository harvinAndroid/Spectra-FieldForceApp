<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:showIn="@layout/wcr_fragment">

    <data>
        <variable
            name="customer"
            type="com.spectra.fieldforce.model.gpon.response.WcrResponse.Wcr" />
    </data>

<LinearLayout android:id="@+id/linear_five"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
>

    <TextView
        android:id="@+id/tv_customer_segment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@{`Customer business segment :  ` + customer.businessSegment}"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp"/>


    <TextView
        android:id="@+id/tv_pod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@{`POD :  ` + customer.pod}"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp"/>

    <TextView
        android:id="@+id/et_item_type5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@{`Product :  ` + customer.product}"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/et_item_type7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@{`Reduncancy required :  ` + customer.redundacy}"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/tv_rack_required"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@{`Rack required :  ` + customer.rack}"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/et_item_type9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="@{`Technical contact person Name :  ` + customer.techContactName}"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp" />


    <TextView
        android:id="@+id/et_item_type10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="@{`Technical contact person Number :  ` + customer.techContactName}"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp" />



</LinearLayout>
</layout>