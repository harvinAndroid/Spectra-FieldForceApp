<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="event"
            type="com.spectra.fieldforce.adapter.AllBucketListAdapter" />

        <variable
            name="allBucketList"
            type="com.spectra.fieldforce.model.gpon.response.GetAllBucketList.Response" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/gray"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@{`Status :  ` + allBucketList.status}"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"  />

        <TextView
            android:id="@+id/engg_nm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tv_can_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`Can Id :  ` + allBucketList.canId}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`Order ID : ` + allBucketList.id}"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"  />

        <TextView
            android:id="@+id/cust_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`Customer Name :  ` + allBucketList.customerName}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/pod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`POD Name :  ` + allBucketList.podName}"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"  />

        <TextView
            android:id="@+id/order_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`OrderType :  ` + allBucketList.orderType}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />



        <TextView
            android:id="@+id/hold_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`Hold Category :  ` + allBucketList.holdCategory}"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/hold_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`Hold Reason :  ` + allBucketList.holdReason}"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"  />



        <TextView
            android:id="@+id/ntwrk_tech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`Network Technology :  ` + allBucketList.networkTechnology}"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"  />
            <TextView
                android:id="@+id/tv_add"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/button_black"
                android:text="@string/add"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginEnd="@dimen/_70sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@android:color/white"
                 />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/color_light_blue"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/tv_wcr_status"
            />

    </LinearLayout>
</layout>