<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:textColor="@color/colorBlack">


            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/sr_number"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/srNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/srNumber"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/can_id"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/srNumber"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerId"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/customer_name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerId"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/mobile_no"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customerMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerName"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlue"
                android:textIsSelectable="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerMobile"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/slot_date_time"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/slotTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerMobile"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/slotTime"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/address"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slotTime"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerAddress"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/segment"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/businessSegemnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerAddress"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/businessSegemnt"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/type"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/srType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/businessSegemnt"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/srType"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/sub_type"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/srSubType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/srType"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/srSubType"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/pod_name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/podName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/srSubType"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/podName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/device_port"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/devicePort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/podName"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/devicePort"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/current_status"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/srStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/devicePort"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/srStatus"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/case_remarks"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/caseRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/srStatus"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/caseRemarks"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/sla_time"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/slaClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/caseRemarks"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/slaClock"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/sla_status"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/slaStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slaClock"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/slaStatus"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/customer_ip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customerIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slaStatus"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerIP"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/foni"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/foni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/customerIP"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/foni"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/repeat"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foni"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/repeat"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/massoutage"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/massoutage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/repeat"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textIsSelectable="true" />



            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/massoutage"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:text="@string/etr"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dateTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/massoutage"
                android:layout_marginStart="120dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="date" />



            <Button
                android:id="@+id/btnETRSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/dateTimeText"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_black"
                android:text="@string/update_etr"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginEnd="@dimen/_70sdp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/startLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnETRSubmit"
                android:background="@color/colorWhite"
                android:focusable="true"
                android:orientation="vertical"
                android:textColor="@color/colorBlack">

                <Button
                    android:id="@+id/btnStartTime"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_purple"
                    android:text="@string/start"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
               <!-- -->

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnStartTime"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/start_time"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnStartTime"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="10dp"
                    android:textIsSelectable="true"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/startTime"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/start_location"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/startLocation"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/startTime"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="10dp"
                    android:textIsSelectable="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/endLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/startLayout"
                android:background="@color/colorWhite"
                android:focusable="true"
                android:orientation="vertical"
                android:textColor="@color/colorBlack"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnEndTime"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorBlack"
                    android:text="@string/end"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnEndTime"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/end_time"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnEndTime"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="10dp"
                    android:textIsSelectable="true"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/endTime"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/end_location"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/endLocation"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/endTime"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="10dp"
                    android:textIsSelectable="true"
                    android:visibility="gone" />

            </RelativeLayout>


            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/endLayout"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:text="@string/change_bin"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/sp_change_bin"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/endLayout"
                android:layout_marginStart="140dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/change_bin_note"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="Remarks"
                android:textColorHint="@android:color/darker_gray"
                android:layout_below="@id/sp_change_bin"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSubmitChnageBin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@id/change_bin_note"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/_70sdp"
                android:background="@drawable/button_purple"
                android:text="@string/change_Bin"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />



            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSubmitChnageBin"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:text="@string/change_status"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/changeStatus"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSubmitChnageBin"
                android:layout_marginStart="140dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/unholdlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/changeStatus"
            android:background="@color/colorWhite"
            android:focusable="true"
            android:orientation="vertical"
            android:textColor="@color/colorBlack"
            android:visibility="gone">


            <Button
                android:id="@+id/btnUnhold"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_black"
                android:text="@string/unhold"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

        </RelativeLayout>


            <RelativeLayout
                android:id="@+id/additemLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/changeStatus"
                android:background="@color/colorWhite"
                android:focusable="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:textColor="@color/colorBlack"
                android:visibility="gone">


                <TextView
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/do_you_want_to_add_material_consumption"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spntemConsumption"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_140sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/resolveLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/additemLayout"
                android:background="@color/colorWhite"
                android:focusable="true"
                android:orientation="vertical"
                android:textColor="@color/colorBlack"
                android:visibility="gone">


                <Button
                    android:id="@+id/btnnext"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorBlack"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />


                <Button
                    android:visibility="gone"
                    android:id="@+id/btnUnifySession"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorBlack"
                    android:text="@string/get_unify_session"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/sessionStatus"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/btnUnifySession"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnUnifySession"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/rc_1"
                    android:textStyle="bold" />

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/rc1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnUnifySession"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rc1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/rc_2"
                    android:textStyle="bold" />

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/rc2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rc1"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rc2"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/rc_3"
                    android:textStyle="bold" />

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/rc3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rc2"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rc3"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/customer_contacted"
                    android:textStyle="bold" />

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/resolveContacted"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rc3"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/resolveContacted"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/rfo"
                    android:textStyle="bold" />

                <EditText
                    android:visibility="gone"
                    android:id="@+id/rfo"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/resolveContacted"
                    android:layout_marginStart="140dp"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/question_recyler_view"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_below="@id/rfo"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnResolveSubmit"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/question_recyler_view"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorBlack"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/holdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/changeStatus"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:focusable="true"
                android:orientation="vertical"
                android:textColor="@color/colorBlack"
                android:visibility="gone">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/holdReason"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/action_code"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/holdReasontwo"
                    android:layout_width="180dp"
                    android:layout_below="@id/holdReason"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="15dp" />


                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/holdReason"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/hold_reason"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/contactName"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/holdReasontwo"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="5dp"
                    android:inputType="text"
                    android:maxLength="25"
                    android:maxEms="25"/>

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/holdReasontwo"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/contact_name"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contactName"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/contact_number"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/contactNumber"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contactName"
                    android:layout_marginStart="140dp"
                    android:inputType="number"
                    android:maxEms="10"
                    android:maxLength="10"
                    />

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contactNumber"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/customer_contacted"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/contacted"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contactNumber"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="10dp" />



                <Button
                    android:id="@+id/btnHoldSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/contacted"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_70sdp"
                    android:layout_marginEnd="@dimen/_70sdp"
                    android:background="@color/colorBlack"
                    android:text="@string/submit_on_hold"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </RelativeLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_item_consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        app:backgroundTint="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="bottom"
        app:elevation="6dp"
        android:visibility="gone"
        android:foregroundGravity="bottom"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:layout_marginStart="@dimen/_250sdp"
        app:pressedTranslationZ="12dp"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:itemBackground="@color/colorButton"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white" />
    <include
        layout="@layout/alert_dialog_canid" />

    <include layout="@layout/progress" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
