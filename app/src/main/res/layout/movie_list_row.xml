<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="10dp"
    android:padding="10dp"
    android:paddingLeft="@dimen/cardview_default_radius"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:textColor="@color/colorBlack">

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Customer ID:" />

        <TextView
            android:id="@+id/customerId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="120dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerId"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Customer Name:" />

        <TextView
            android:id="@+id/customerName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerId"
            android:layout_marginLeft="120dp"

            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Email ID:" />

        <TextView
            android:id="@+id/customerEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerName"
            android:layout_marginLeft="120dp"

            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerEmail"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Mobile No:" />

        <TextView
            android:id="@+id/customerMobile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerEmail"
            android:layout_marginLeft="120dp"

            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerMobile"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Address:" />

        <TextView
            android:id="@+id/customerAddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerMobile"
            android:layout_marginLeft="120dp"

            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerAddress"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="SR Number:" />

        <TextView
            android:id="@+id/srNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerAddress"
            android:layout_marginLeft="120dp"

            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srNumber"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Slot Date Time:" />


        <TextView
            android:id="@+id/slotTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srNumber"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slotTime"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="SR Type:" />


        <TextView
            android:id="@+id/srType"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slotTime"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srType"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="SR Sub Type:" />


        <TextView
            android:id="@+id/srSubType"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srType"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srSubType"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="SR Sub Sub Type:" />


        <TextView
            android:id="@+id/srSubSubType"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srSubType"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srSubSubType"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Current Status" />


        <TextView
            android:id="@+id/srStatus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srSubSubType"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srStatus"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:text="Case Remarks:" />

        <TextView
            android:id="@+id/caseRemarks"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srStatus"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>