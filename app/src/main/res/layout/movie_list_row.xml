<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="10dp"
    android:padding="10dp"
    android:paddingLeft="@dimen/cardview_default_radius"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:textColor="@color/colorBlack">

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Customer ID:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerId"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Segment:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/businessSegemnt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerId"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/businessSegemnt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Customer Name:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/businessSegemnt"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Mobile No:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerMobile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerName"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerMobile"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Address:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerAddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerMobile"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerAddress"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="SR Number:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/srNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerAddress"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srNumber"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Slot Date Time:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slotTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srNumber"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slotTime"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Type:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/srType"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slotTime"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srType"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Sub Type:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/srSubType"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srType"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srSubType"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="POD Name:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/podName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srSubType"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/podName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Device/Port:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/devicePort"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/podName"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/devicePort"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Current Status"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/srStatus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/devicePort"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srStatus"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Case Remarks:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/caseRemarks"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srStatus"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/caseRemarks"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="SLA Clock:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slaClock"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/caseRemarks"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slaClock"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="SLA Status:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slaStatus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slaClock"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slaStatus"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Customer IP:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerIP"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slaStatus"
            android:textIsSelectable="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>