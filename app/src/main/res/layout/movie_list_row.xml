<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:padding="@dimen/_5sdp"
    android:paddingStart="@dimen/cardview_default_radius"
    android:paddingEnd="@dimen/cardview_default_radius"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorBlack">

        <TextView
            android:layout_width="@dimen/_135sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/sr_number"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/srNumber"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:text="@string/app_name"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srNumber"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="10dp"
            android:text="@string/sla_time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slaClock"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srNumber"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slaClock"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/can_id"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerId"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slaClock"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerId"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/customer_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerId"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/mobile_no"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerMobile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerName"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlue"
            android:textIsSelectable="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerMobile"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/slot_date_time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slotTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerMobile"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slotTime"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/current_status"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/srStatus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/slotTime"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srStatus"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/address"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerAddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/srStatus"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/tv_turnover"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerAddress"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/account_turnover"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/turnOver"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/customerAddress"
            android:layout_marginStart="140dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/tv_cat"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/turnOver"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="Internal Customer Category"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/turnOver"
            android:layout_marginStart="140dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/cust_cat"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/category"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:text="@string/customer_category"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/excategory"
            android:layout_width="200dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_below="@id/category"
            android:layout_marginStart="140dp"
            android:layout_marginTop="10dp"
            android:textIsSelectable="true" />

        <Button
            android:id="@+id/btnView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_below="@id/excategory"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_black"
            android:text="@string/acknowledge"
            android:textAllCaps="false"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>